<Window x:Class="PaineisApp.Window10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaineisApp"
        mc:Ignorable="d"
        Title="Grid" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <GroupBox Margin="4" Grid.ColumnSpan="2" Header="GroupBox">
            <TextBlock Margin="4" HorizontalAlignment="Center" Text="Bem-vindo ao WPF" />
        </GroupBox>
        <Button Margin="4" Grid.Row="1" Content="Bem-vindo ao WPF" />
        <TextBox Margin="4" Grid.Row="1" Grid.Column="1"  Grid.RowSpan="2"
                 HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" Text="Bem-vindo ao WPF" />
        <GroupBox Margin="4" Grid.Row="2" Header="GroupBox">
            <TextBlock Text="Bem-vindo ao WPF" />
        </GroupBox>
    </Grid>
</Window>
