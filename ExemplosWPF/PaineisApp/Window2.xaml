<Window x:Class="PaineisApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaineisApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="300">
    <Canvas>
        <Border BorderBrush="Green" BorderThickness="2">
            <Label Padding="40,30" Background="Orange" Content="Padding" />
        </Border>
        <Border Margin="150,0,0,0" BorderBrush="Green" BorderThickness="2">
            <Label Margin="20" Padding="10" Background="Orange" Content="Margin" />
        </Border>
    </Canvas>
</Window>
